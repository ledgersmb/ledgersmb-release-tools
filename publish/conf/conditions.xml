<conditions>
  <condition name="have ledgersmb workspace" class="LedgerSMB::Releaser::Condition::HaveWorkspace">
    <param name="workspace-key" value="our_workspace" />
  </condition>
  <condition name="have docker workspace" class="LedgerSMB::Releaser::Condition::HaveWorkspace">
    <param name="workspace-key" value="docker_workspace" />
  </condition>
  <condition name="deps available" class="LedgerSMB::Releaser::Condition::DepsSatisfied">
    <param name="commands" value="find,gpg,git,sed,grep,tar,perl,mktemp,less,gzip,awk,sha256sum,scp,sftp,sudo,tx,make,msgmerge,msguniq,curl,jq,cat,date,createdb,postgresql_autodoc" />
  </condition>
</conditions>
